<div class="row" id="login_register_bc">
    <div class="col-md-6 col-md-offset-3">
        <div class="card">
            <img class="logo text-center" src="../../public/images/logo.png">
            <h3 class="text-center" id="login_register_msg">登录</h3>
            <form action="/users/login" method="POST">
                <div class="form-group">
                    <label for="email">邮箱:</label>
                    <input type="email" name="email" placeholder="请输入email" 
                     pattern="^[a-z0-9]+([._\\-]*[a-z0-9])*@([a-z0-9]+[-a-z0-9]*[a-z0-9]+.){1,63}[a-z0-9]+$" required>
                </div>
                <div class="form-group">
                    <label for="password">密码:</label>
                    <input type="password" name="password" placeholder="请输入密码"  required>
                </div>
                <button type="submit" class="btn btn-primary" id="login_register_btn">登录</button>
                <p class="message">还没有账户? <a href="/users/register">立刻创建</a></p>
            </form>
        </div>
    </div>
</div>